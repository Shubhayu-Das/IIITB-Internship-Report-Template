% Customizing figure and table numbering in chapters
\newcommand{\setchapterindexing}{
  \renewcommand{\thetable}{TC\arabic{chapter}.\arabic{table}}
  \renewcommand{\thefigure}{FC\arabic{chapter}.\arabic{figure}}
  \renewcommand{\theequation}{Eqn~\arabic{chapter}.\arabic{equation}}
}

% Customizing figure and table numbering in appendices
\newcommand{\setappendixindexing}{
  \renewcommand{\thetable}{TA\arabic{chapter}.\arabic{table}}
  \renewcommand{\thefigure}{FA\arabic{chapter}.\arabic{figure}}
  \renewcommand{\theequation}{Eqn~\arabic{chapter}.\arabic{equation}}
}

